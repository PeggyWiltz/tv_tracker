a:hover{
  text-decoration:none!important;
}

body{
  background: #1280CB;
  background: url(<%= asset_path 'background.jpg' %>) center 65px no-repeat;
  background-size: 800px auto;
}

body.home{
  background-position:center 400px;
}

img{
  width:100%;
}

.left {
  float: left;
}

.right {
  float: right;
}

.img_left{
  float:left;
  margin-right:20px;
  margin-bottom:25px;
}

.img_right{
  float:right;
  margin-left:20px;
  margin-bottom:25px;
}

.right{
  float:right;
}

.clear{
  clear:both;
}

.xs-text-left{
  text-align:left;
}

.xs-text-center{
  text-align:center;
}

.xs-text-right{
  text-align:right;
}


/* Small devices (tablets, 768px and ) */
@media (max-width: 765px) {
  header .logo{
    width:80%!important;
    margin:10px auto!important;
    display:block;
    float:none;
  }
  .box-container {
    margin: 15px auto!important;
    display: block!important;
    float:none!important;
  }
}



/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) {
  .sm-text-left{
    text-align:left;
  }

  .sm-text-center{
    text-align:center;
  }

  .sm-text-right{
    text-align:right;
  }

  body{
    background-size: 1000px auto;
  }
}

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) {
  .md-text-left{
    text-align:left;
  }

  .md-text-center{
    text-align:center;
  }

  .md-text-right{
    text-align:right;
  }

  body{
    background-size: 1250px auto;
  }
}

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
  .lg-text-left{
    text-align:left;
  }

  .lg-text-center{
    text-align:center;
  }

  .lg-text-right{
    text-align:right;
  }

  body{
    background-size: 2000px auto;
  }
}


h1,h2,h3{
  color: #1895D3!important;
}

.alert-box{
  display:none!important;
}

.container{
  width:100%;
  max-width:990px;
  margin:0 auto;
}

.block{
  display:block;
}

.rounded{
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
}

.rounded.sm{
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}

.box-container{
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  border-radius: 20px;
  background: #1498E3;
  display:inline-block;
  padding:15px;
  float:left;
  margin-top: 20px;
}

.box-container em,
.box-container .label,
.box-container a,
.box-container label,
.box-container h3,
.box-container p {
  color: white!important;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.4);
}

.box-container em{
  font-size:.85em;
}

.poster {
  width: 350px;
  height: auto;
}

.body.container{
  background:#F0EBEB;
  background: rgba(240, 235, 235, .85);
  min-height:700px;
}

header{
  width:100%;
  background: #1895D3; /* Old browsers */
  background: -moz-linear-gradient(top, #1895D3 0%, #0E5D8A 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#1895D3), color-stop(100%,#0E5D8A)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #1895D3 0%, #0E5D8A 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #1895D3 0%, #0E5D8A 100%); /* Opera 11.10+ */
