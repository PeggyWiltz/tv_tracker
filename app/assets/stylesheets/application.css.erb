header .logo{
  margin-top:20px;
  margin-bottom:20px;
}

.search{
  text-align:left;
}
.search input[type=text]{
  width:60px;
  font-size:13px;
}



header nav{
  position:relative;
  width:100%;
  float:left;
}

.profile-links nav{
  width:50%;
}

header nav > a {
  width:100%;
  text-align:center;
  padding:10px 0;
}

header nav a{
  font-family: 'Source Sans Pro', sans-serif;
  font-size:1.6rem;
  color:white!important;
  text-decoration:none!important;
  padding:10px 10px;
  margin-top:18px;
  background:none!important;
  display:inline-block;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
}

header a:hover{
  color:#27C228!important;
}

header nav ul{
  display:none;
  position:absolute;
  width:250px;
  top:70%;
  left:0;
  text-align:left;
}

header nav:hover ul{
  display:block;
  /*background: #1895D3;*/
  /*background: rgba(18, 129, 204, .9);*/
}

header nav ul li{
  display:inline;
}

header nav ul li a{
  text-align:left;
  padding:5px;
}

header .search_bar{
  margin-top:28px;
}

header .search_bar input[type=text]{
  width:100%;
  max-width:120px;
}

header .sign_in_nav{
  text-align:right;
  float:right;
}

header .sign_in_nav a{
  width:48%;
}

header .sign_in_nav a.full{
  width:100%;
}

header .sign_in_nav a.half{
  width:48%;
}


.banner{
  overflow:hidden;
  width:100%;
