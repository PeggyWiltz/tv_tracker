<div class="row" style="width:90%; margin:0 5%;">
  <%= link_to edit_profile_path @profile do %>
    <%= image_tag asset_path(@profile.image_url), class: "profile_pic sm right rounded" %>
  <% end %>  
  <h2>Your Shows</h2>
</div>

<div class="profile_show_list clearfix">
<% @profile.shows.each do |show| %>
  <div class="profile_show">
    <%= image_tag show.poster %>
    <strong>
    <%= link_to 'Remove Show', profile_remove_show_from_profile_path(@profile, show), :method => :delete %>
    <strong>

  </div>
<% end %>
</div>

<div class="clear">&nbsp;</div>
<%= link_to 'Add Show', shows_path, :class => 'button' %>
<%= link_to 'Edit Profile', edit_profile_path(@profile), :class => 'button' %>


