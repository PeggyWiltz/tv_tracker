<p>
  <strong>Name:</strong>
  <%= @profile.name %>
</p>

<h2>Show List</h2>


<div class="profile-show-list">
<% @profile.shows.each do |show| %>
  <div class="profile-show">
    <h3><%= show.name %></h3>
    <p><%= link_to 'Remove Show', profile_remove_show_from_profile_path(@profile, show), :method => :delete %></p>

  </div>
<% end %>
  <div class="profile-show">
    <%= link_to 'Add Show', shows_path %>
  </div>
</div>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
