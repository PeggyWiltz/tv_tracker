<!DOCTYPE html>
<html>
<head>
  <title>TvTracker</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Bootstrap css and js -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

</head>
<%= content_tag :body, class: "" + (current_page?(root_url) ? "home" : "" ) do %>
  <% flash.each do |key, value| %>
    <div class="alert-box round <%= flash_class(key) %>">
      <%= value %>
    </div>
  <% end %>

  <header>
    <div class="container">
      <div class="row">
        <%= link_to root_path, :class => 'logo-container' do %>
          <%= image_tag 'logo.png', :class => 'logo col-xs-12 col-sm-3 block' %>
        <% end %>

        <% if @current_profile %>
          <%= render 'layouts/header' %>
        <% end %>

        <%= render 'layouts/sign_in' %>
      </div>
    </div>
  </header>

<% if current_page?(root_url) %>
  <div class="banner banner-home">
    <%= image_tag("banner.jpg", :alt => "Track Your Favorite Tv Shows Banner") %>
  </div>
<% end %>


<%= content_tag :div, class: "container body" do %>
  <%= yield %>
<% end %>


<% end %>
</html>
