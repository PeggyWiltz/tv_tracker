<h1>Listing Shows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Banner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.name %></td>
        <td><img src="<%= show.banner %>"></td>
        <td><%= link_to 'Show', show %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <%= form_tag show_search_path, :method => 'get' do %>
      <%= text_field_tag :Search, params[:search] %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>
